pipeline {
    agent any
    environment {
       K8s_NS = 'default'
       K8S_CREDS = 'kubernets-creds-faree'
    }
    stages {
        stage('Hello') {
            steps {
               echo "Executing your ${BUILD_NUMBER}"
               sh './hello-world.sh'
            }
        }
       stage ("Install Kubectl"){
         steps{
                sh 'curl -LO "https://storage.googleapis.com/kubernetes-release/release/v1.20.5/bin/linux/amd64/kubectl"'  
                sh 'chmod u+x ./kubectl'  
               }
       }
       stage ("fetching Kubernets token from jenkins creds") {
         steps{
            script{
                  def kubeSAToken = ${K8S_CREDS}
               sh """
                 kubectl config set-credentials sa-user --token=${kubeSAToken}
                 kubectl config set-context sa-context --cluster=default-cluster --user=sa-user --namespace=${K8s_NS}
                 kubectl config use-context sa-context
               """
             }
           }
         }
       stage ("Deploy Pod"){
             steps {
               script {
                    sh './kubectl apply -f pod.yaml'
                    sh './kubectl get pods'
               }
             }
        }
    }
}
